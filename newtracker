<body>

<div class="container">
    <div class="half top-half">
        <h2>KAI’S TEAM</h2>
        <div class="score" id="scoreKai">0</div>
        <div class="team-controls">
            <button class="btn-circle" onclick="changeScore('kai', -1)">−</button>
            <button class="btn-circle" onclick="changeScore('kai', 1)">+</button>
        </div>
    </div>

    <div class="half">
        <h2>OTHER TEAM</h2>
        <div class="score" id="scoreOther">0</div>
        <div class="team-controls">
            <button class="btn-circle" onclick="changeScore('other', -1)">−</button>
            <button class="btn-circle" onclick="changeScore('other', 1)">+</button>
        </div>
    </div>

    <div class="bottom-bar">
        <button class="reset-btn" onclick="resetScores()">0</button>
    </div>
</div>

<script>
    let scores = { kai: 0, other: 0 };

    function changeScore(team, amount) {
        scores[team] = Math.max(0, scores[team] + amount);
        document.getElementById('score' + team.charAt(0).toUpperCase() + team.slice(1)).innerText = scores[team];
        
        // Brief haptic vibration feel for touch devices
        if (window.navigator.vibrate) window.navigator.vibrate(10);
    }

    function resetScores() {
        if (confirm("Reset both scores?")) {
            scores.kai = 0;
            scores.other = 0;
            document.getElementById('scoreKai').innerText = 0;
            document.getElementById('scoreOther').innerText = 0;
        }
    }
</script>

</body>
