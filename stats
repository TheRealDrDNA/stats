    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Volleyball Stats</title>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
            background-color: white;
            color: black;
            display: flex;
            justify-content: center;
            padding-top: 20px;
            margin: 0;
            user-select: none;
        }

        .container {
            width: 90%;
            max-width: 400px;
            border: 1px solid black;
        }

        .row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 10px;
            border-bottom: 1px solid #ddd;
        }

        .label {
            flex: 1;
            font-size: 1.1rem;
            font-weight: 500;
            padding: 0 10px;
        }

        .controls {
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .btn {
            width: 44px; /* Slightly larger for easier tapping on iPhone */
            height: 44px;
            background-color: black;
            color: white;
            border: none;
            border-radius: 4px;
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            touch-action: manipulation;
        }

        .btn:active {
            background-color: #444;
        }

        .count {
            font-size: 1.5rem;
            min-width: 35px;
            text-align: center;
        }

        .reset-container {
            padding: 20px;
            display: flex;
            justify-content: center;
        }

        .reset-btn {
            padding: 10px 30px;
            background-color: white;
            border: 1px solid black;
            font-size: 1.1rem;
            cursor: pointer;
        }
